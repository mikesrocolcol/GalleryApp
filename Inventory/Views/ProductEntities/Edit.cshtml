@model Inventory.Models.ProductEntities

@{
    ViewData["Title"] = "Index";
     
}


<h1>Edit</h1>


<hr />
<div class=" .container-sm table-create">
    
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           
            <div class="form-group table-create">
                <div class="img">
                <img src="@("~/images/"+Model.Image)" asp-append-version="true" width="150px" height="150px"  />
           
                </div>
            </div>

            
           <div class="form-group">
                <span asp-validation-for="FormFile" class="text-danger"></span>
                <label asp-for="FormFile" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="FormFile" class="custom-file-input form-control" type="file" id="formFile"
                           onchange="document.getElementById('ProductPrev').src=window.URL.createObjectURL(this.files[0])">


                </div>
                
                <img class="rounded" id="ProductPrev" src="" alt="productImg" width="350" height="450"
                     style="border:1px;margin-top:20px;margin-left:120px; " />


            </div>
             <div class="mb-3">
            <button type="submit" class="btn btn-primary " style="width:150px ">Save</button>
             <a asp-controller="ProductEntities" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        
            </div>
            
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    
    <script type="text/javascript">
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("Selected").html(fileName);

        });
    </script>
}
